<h1>Items for sale!!</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Item price</th>
      <th>Item quanity</th>
      <th>Item category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_name %></td>
        <td><%= item.item_price %></td>
        <td><%= item.item_quanity %></td>
        <td><%= item.item_category %></td>
        <td><%= link_to 'Info', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href= "/cart/<%= item.id %>">Add Item to Cart</a></td>
	  </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
